   <children>
      <Label text="Memory Match Game">
         <font>
            <Font name="Avenir Next Regular" size="48.0" />
         </font></Label>
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Start" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
